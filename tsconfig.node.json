{
    "compilerOptions": {
      "composite": true,
      "module": "esnext",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "allowJs": true, // 允许编译器编译JS，JSX文件
      "paths": {
        "@/components": ["./components"],
        "@/components/*": ["./components/*"],
        "@/const": ["./const"],
        "@/const/*": ["./const/*"],
        "@/hooks": ["./hooks"],
        "@/hooks/*": ["./hooks/*"],
        "@/icons": ["./icons"],
        "@/icons/*": ["./icons/*"],
        "@/public": ["./public"],
        "@/public/*": ["./public/*"],
        "@/stores": ["./stores"],
        "@/stores/*": ["./stores/*"],
        "@/styles": ["./styles"],
        "@/styles/*": ["./styles/*"],
        "@/utils": ["./utils"],
        "@/utils/*": ["./utils/*"],
      }
    },
    "include": ["vite.config.ts", "./*.ts"],
  } 